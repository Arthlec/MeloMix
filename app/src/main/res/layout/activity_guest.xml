<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestActivity">

    <Button
        android:id="@+id/onOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toEndOf="@+id/onOff"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListTamere"
        android:layout_width="368dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onOff"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/status_b"
        android:layout_width="134dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/ListTamere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/msg_b"
        android:layout_width="171dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListTamere" />

    <TextView
        android:id="@+id/KieKi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ListTamere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_b"
        app:layout_constraintVertical_bias="0.2" />

    <view
        android:id="@+id/my_view"
        class="android.support.v4.view.ViewPager"
        id="@+id/view"
        android:layout_width="242dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toTopOf="@+id/msg_b"
        app:layout_constraintEnd_toStartOf="@+id/ListTamere"
        app:layout_constraintStart_toEndOf="@+id/ListTamere"
        app:layout_constraintTop_toBottomOf="@+id/ListTamere"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>