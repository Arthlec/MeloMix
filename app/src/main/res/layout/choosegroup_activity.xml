<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/DJ_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/je_cr_e_mon_groupe"
        app:layout_constraintBottom_toTopOf="@+id/searchforgroup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchforgroup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/je_rejoins_un_groupe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DJ_button" />
</android.support.constraint.ConstraintLayout>